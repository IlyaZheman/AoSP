@model AoSP.ViewModels.Teacher.SubjectTaskViewModel

<div>
    <li>
        <div>
            <div class="form-group">
                <label>@Model.Title</label>
                <label>@Model.Description</label>

                @if (Model.HasFile)
                {
                    <form class="col-xs-12" asp-action="DownloadFile" asp-controller="Teacher" method="post" enctype="multipart/form-data">
                        <input type="text" asp-for="Id" hidden="hidden"/>
                        <button type="submit" class="btn btn-primary col-xs-12">Download</button>
                    </form>
                }

                <form class="col-xs-12" asp-action="SetScore" asp-controller="Teacher" method="post">
                    <input asp-for="Id" hidden="hidden"/>
                    <input type="number" asp-for="Score"/>
                    <button type="submit" class="btn btn-primary col-xs-12">Сохранить</button>
                </form>
            </div>
        </div>
    </li>
</div>