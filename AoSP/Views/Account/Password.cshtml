@model AoSP.ViewModels.Account.PasswordViewModel

@{
    ViewBag.Title = "Password";
    Layout = "_Layout";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div style="max-width: 35em; min-width: 17em;">
            <div class="card">
                <div class="card-header">
                    <h3 class="text-center">Пароль</h3>
                </div>
                <div class="card-body">
                    <form autocomplete="on" method="post" asp-controller="Account" asp-action="Password">
                        <input class="form-control text-center" asp-for="Login" type="text" hidden="hidden">
                        <div>
                            <input class="form-control text-center" autocomplete="new-password"
                                   asp-for="Password" placeholder="Пароль" type="password">
                        </div>
                        <div class="d-flex justify-content-between">
                            <button class="btn btn-success">Войти</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>