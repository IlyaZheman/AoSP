@model AoSP.ViewModels.Account.LoginViewModel

@{
    ViewData["Title"] = "Авторизация";
    Layout = "_Layout";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div style="max-width: 35em; min-width: 17em;">
            <div class="card">
                <div class="card-header">
                    <h3 class="text-center">Вход в аккаунт</h3>
                </div>
                <div class="card-body">
                    <form autocomplete="on" method="post" asp-controller="Account" asp-action="Login">
                        <div class="text-danger text-center" asp-validation-summary="All"></div>
                        <div>
                            <input class="form-control text-center" asp-for="Login" placeholder="Логин" type="text">
                            <div class="form-text">Длина логина должна быть от 3 до 20 символов.</div>
                        </div>
                        @* <div> *@
                        @*     <input class="form-control text-center" autocomplete="new-password" *@
                        @*            asp-for="Password" placeholder="Пароль" type="password"> *@
                        @* </div> *@
                        <div class="d-flex justify-content-between">
                            @* <a class="btn btn-primary" asp-controller="Account" asp-action="Register" *@
                            @*    type="button">Создать аккаунт</a> *@
                            <button class="btn btn-success">Войти</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>