@model UserViewModel

<div class="student d-flex">
    <input type="text" class="form-control flex-fill" placeholder="Имя" asp-for="Name">
    <input type="text" class="form-control flex-fill" placeholder="Фамилия" asp-for="Surname">
    <input type="text" class="form-control flex-fill" placeholder="Отчество" asp-for="Patronymic">
    <input type="text" class="form-control flex-fill" placeholder="Логин" asp-for="Login">
    <a href="#" class="delete btn btn-outline-danger flex-shrink-1">Удалить</a>
</div>

<script>
    $("a.delete").on("click", function () {
        $(this).parents("div.student:first").remove();
        return false;
    });
</script>