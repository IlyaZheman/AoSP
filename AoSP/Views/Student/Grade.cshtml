@model AoSP.ViewModels.Student.StudentGradeViewModel

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

@foreach (var subject in Model.PersonalSubjects)
{
    <div>
        <h5>@subject.Title</h5>
        <h6>@subject.Teacher.Surname @subject.Teacher.Name @subject.Teacher.Patronymic</h6>
        <ul class="flex-grow-1">
            @foreach (var task in subject.PersonalSubjectTasks)
            {
                <li>
                    <div>
                        <h5>@task.TaskTitle</h5>
                        <p>@task.Score</p>
                        @if (task.File != null)
                        {
                            <form class="col-xs-12" method="post" asp-controller="Student" asp-action="DownloadFile">
                                <div class="form-group">
                                    <button type="submit" class="btn btn-primary col-xs-12">Download</button>
                                </div>
                            </form>
                        }
                        else
                        {
                            <form class="col-xs-12" method="post" asp-controller="Student" asp-action="UploadFile" enctype="multipart/form-data">
                                <div class="form-group">
                                    <input type="file" class="form-control" name="file"/>
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="btn btn-primary col-xs-12">Upload</button>
                                </div>
                            </form>
                        }
                    </div>
                </li>
            }
        </ul>
    </div>
}