@model UserViewModel

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<div class="row">
    <div class="col-sm-6">
        <div class="card">
            <div class="card-body">
                <form id="profileFormId">
                    <input asp-for="Id" hidden="hidden"/>
                    <h5 class="card-title">Данные профиля</h5>
                    <div class="mb-3">
                        <input type="text" class="form-control" asp-for="Name" disabled="disabled">
                    </div>
                    <div class="mb-3">
                        <input type="text" class="form-control" asp-for="Surname" disabled="disabled">
                    </div>
                    <div class="mb-3">
                        <input type="text" class="form-control" asp-for="Patronymic" disabled="disabled">
                    </div>
                    <div class="mb-3">
                        <input type="text" class="form-control" asp-for="Role" disabled="disabled">
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-sm-6">
        <div class="card">
            <div class="card-body">
                <form id="accountFormId">
                    <h5 class="card-title">Данные аккаунта</h5>
                    <div class="mb-3">
                        <label class="form-label text-black-50">Логин</label>
                        <input id="login" type="text" placeholder="@Model.Login" class="form-control" asp-for="Login" disabled="disabled">
                        <div class="form-text">Длина логина должна быть от 3 до 20 символов.</div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label text-black-50">Смена пароля</label>
                        <input type="password" placeholder="Введите новый пароль" class="form-control">
                        <div class="form-text">Длина пароля должна быть от 3 до 20 символов.</div>
                        <input type="password" placeholder="Повторите пароль" class="form-control">
                        <div class="form-text">Пароли должны совпадать</div>
                    </div>
                    <div class="mb-3">
                        <button class="btn btn-success">Сохранить</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>